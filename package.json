{
  "version": "0.2.0",
  "keywords": [
    "react",
    "hooks"
  ],
  "license": "Unlicense",
  "description": "Collection of useful React Hooks",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "prepublish": "yarn build",
    "publish": "npm publish",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vespaiach/just-hooks"
  },
  "bugs": {
    "url": "https://github.com/vespaiach/just-hooks/issues"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "just-hooks",
  "author": "vespaiach; nta.toan@gmail.com",
  "module": "dist/just-hooks.esm.js",
  "size-limit": [
    {
      "path": "dist/just-hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/just-hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@testing-library/react-hooks": "^5.1.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "husky": "^5.1.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
